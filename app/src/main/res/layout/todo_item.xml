<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/box_round_white"
    android:layout_marginBottom="5dp">

    <ImageView
        android:id="@+id/item_color"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:padding="8dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/baseline_favorite_border_black_36dp"
        app:tint="#E4E4E4" />

    <TextView
        android:id="@+id/item_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:padding="10dp"
        android:text="text"
        android:textSize="20sp"
        android:layout_toEndOf="@+id/item_color"
        android:layout_toStartOf="@+id/item_delete"/>


    <ImageView
        android:id="@+id/item_delete"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:gravity="center"
        android:padding="7dp"
        android:textColor="#FF0000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:srcCompat="@drawable/baseline_clear_black_36dp"
        app:tint="#FF4B4B" />

</RelativeLayout>